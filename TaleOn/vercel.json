{
  // Use this when deploying the repository root to Vercel
  // It builds the frontend located at TaleOn/taleon and serves its dist output
  "buildCommand": "cd taleon && npm ci && npm run build",
  "outputDirectory": "taleon/dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ]
}
